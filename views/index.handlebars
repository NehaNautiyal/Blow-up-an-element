<h1>Elements</h1>

<div class="row">

    <div class="col-md-6">
        <h2>Elements that are not blown up:</h2>

        <ul>
            {{#each elements}}
            {{#unless blown_up}}
            {{> elements/element-block blown_up=false}}
            {{/unless}}
            {{/each}}
        </ul>
    </div>
    <div class="col-md-6">

        <h2>Elements that have been blown up!</h2>

        <ul>
            {{#each elements}}
            {{#if blown_up}}
            {{> elements/element-block blown_up=true}}
            {{/if}}
            {{/each}}
        </ul>
    </div>
</div>
<div class="row">

    <h2>Add an Element</h2>
</div>
<div class="row">
    <form class="create-form">

        <div class="form-group">
            <label for="ca">Element Name:</label>
            <input type="text" id="ca" name="name">
        </div>

        <button type="submit">Add Element</button>
    </form>
</div>
</div>